{
	"manifest_version": 2,
	"name": "Play Midnight for Google Play Musicâ„¢",
	"short_name": "Play Midnight",
	"version": "1.1.0",

	"description": "A theme created for Google Play Music to give your eyes a break with a darker layout.",
	"icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png"
	},

	"options_page": "assets/options.html",
	"page_action": {
		"default_icon": "icon48.png",
		"default_title": "Play Midnight Options"
	},
	"background": {
		"scripts": ["js/background.min.js"],
		"persistent": false
	},
	"permissions": [
		"storage",
		"tabs",
		"notifications"
	],


	"content_scripts": [
		{
			"matches": ["*://play.google.com/music/listen*"],
			"run_at": "document_end",
			"js": ["js/play-midnight.min.js"]
		}
	],

	"web_accessible_resources": ["css/play-midnight-*.css", "images/*", "icon48.png"]
}